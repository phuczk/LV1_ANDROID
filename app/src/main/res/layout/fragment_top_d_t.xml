<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    tools:context=".fragment.TopDTFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="Doanh Thu"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:background="#2196F3"
        android:paddingTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/ln_item"
            android:orientation="horizontal"
            android:elevation="8dp"
            >
            <LinearLayout
                android:id="@+id/chartContainer"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="15dp"
                        android:text="hang xuat kho: "
                        android:gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/soLieuNhap"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="#00C808"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:text="0"
                        android:gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="15dp"
                        android:text="hang nhap kho: "
                        android:gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/soLieuXuat"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="#F44336"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:text="0"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="15dp"
                        android:text="loi nhuan: "
                        android:gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/soLoiNhuan"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="#00C808"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:text="0"
                        android:gravity="center_vertical"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/ln_item"
            android:layout_marginTop="15dp"
            android:elevation="8dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/btnFrom"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/date"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"/>
                <EditText
                    android:id="@+id/edFrom"
                    android:layout_width="270dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#FFC107"
                    android:hint="tu ngay"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/btnTo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/date"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"/>
                <EditText
                    android:id="@+id/edTo"
                    android:layout_width="270dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#00BCD4"
                    android:hint="den ngay"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btnSee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="see"/>
    </LinearLayout>

</FrameLayout>