<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ln_item"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:elevation="8dp"
    >

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:src="@drawable/iv_shipping"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvTenDVVC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="ten Don vi"
            android:textSize="30dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="#03A9F4"/>
        <TextView
            android:id="@+id/tvSDTDVVC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="so dien thoai"
            android:layout_marginLeft="10dp"
            android:textColor="#03A9F4"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/btnUDDVVC"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/btn_u_d_lh"/>
</LinearLayout>