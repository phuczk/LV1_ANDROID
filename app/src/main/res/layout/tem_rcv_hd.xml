<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ln_item"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:elevation="8dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:src="@drawable/hoa_don"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="ten hang: "/>
            <TextView
                android:id="@+id/tvHD_TH"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="product 1"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textColor="#009688"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="so luong: "/>
            <TextView
                android:id="@+id/tvHD_SL"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="369"
                android:gravity="center_vertical"
                android:textColor="#9C27B0"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="ngay: "/>
                <TextView
                    android:id="@+id/tvHD_N"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="30/02/2024"
                    android:gravity="center_vertical"
                    android:textColor="#2196F3"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="tong tien: "/>
            <TextView
                android:id="@+id/tvHD_TT"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="320.000 vnd"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textColor="#8BC34A"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/btnUpdate_HD"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/pen"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="khach hang: "/>
            <TextView
                android:id="@+id/tvHD_KH"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="nguyen van b"
                android:gravity="center_vertical"
                android:textColor="#00BCD4"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>